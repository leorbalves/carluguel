<%= image_tag @car.image_url, width:400, height: 300%>
<%= @car.year %>
<%= @car.brand %>
<%= @car.model %>
<%= @car.description %>
<p><% @car.reviews.each do |review|%>
  <%= review.content %>
  <% end %>
 </p>

<%= link_to "See other cars", cars_path ,class:"btn btn-primary my-2"%>
<%= link_to "Edit the car", edit_car_path(@car) ,class:"btn btn-primary my-2" if policy(@car).edit?%>
<%= link_to "Destroy the car", car_path(@car), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} ,class:"btn btn-primary my-2" if policy(@car).destroy?%>
<%= link_to "Review this car", new_car_review_path(@car) ,class:"btn btn-primary my-2"%>
<% if current_user != @car.user  %>
 <%= link_to "Rent this car", new_car_rental_path(@car) ,class:"btn btn-primary my-2"%>
<% end %>
