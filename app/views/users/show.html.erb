<div class="container">
  <div>
  <h2 class="text-center my-3 text-white">Available Cars</h2>
  </div>
  <div class="row justify-content-center">
    <%@cars.each do |car|%>
      <% if car.rented == false %>
        <div class="card border-0 rounded rounded-4 justify-content-center d-flex flex-row align-items-center m-1 p-0" style="width: 30rem; height: 13rem">
            <%= image_tag car.image_url, width: 200, height: "100%", class:"img-my-cars rounded-4" %>
            <div class="card-body">
              <h5 class="card-title"><%= car.year %> <%= car.brand %> <%= car.model %></h5>
              <br>
              <%= link_to "See details", car_path(car), class: "section2_btn btn55 color-link text-center text-decoration-none bottom-0 start-50 translate-middle-x my-3 mb-3 mr-2 w-75" %>
            </div>
        </div>
      <% end %>
    <% end %>
      <%@cars.each do |car|%>
        <% if car.rented == true %>
          <% car.rentals.each do |rental| %>
            <% if rental.confirmation == false %>
              <div class="card border-0 rounded rounded-4 justify-content-center d-flex flex-row align-items-center m-1" style="width: 24rem; height: 13rem">
                <%= image_tag car.image_url, width: 200, height: 160%>
                <div class="card-body">
                  <h5 class="card-title"><%= car.brand %> <%= car.model %> - <%= car.year %></h5>
                  <%= link_to "See details", car_path(car), class: "section2_btn btn55 color-link text-center text-decoration-none bottom-0 start-50 translate-middle-x my-3 mb-3 mr-2 w-75" %>

                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
  </div>
  <div>
  <h2 class="text-center text-white my-3 mt-5">My Rented Cars</h2>
  </div>
  <div class="row justify-content-center">
    <%@cars.each do |car|%>
      <%if @user.id == current_user.id%>
        <% car.rentals.each do |rental| %>
          <% if rental.confirmation == true %>
            <div class="card border-0 rounded rounded-4 justify-content-center d-flex flex-row align-items-center m-1" style="width: 24rem; height: 13rem">
              <%= image_tag car.image_url, width: 200, height: 160%>
              <div class="card-body">
                <h5 class="card-title"><%= car.brand %> <%= car.model %> - <%= car.year %></h5>
                <%= link_to "See details", car_path(car), class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
